f = open("24_58329.txt")
s = f.readline()
cnt = 1
max_cnt = 1
for i in range(len(s) - 1):
    if int(s[i-2]) + int(s[i-1]) > int(s[i]):
        cnt += 1
    else:
        cnt = 1
    max_cnt = max(cnt, max_cnt)
print(max_cnt)

-----------------------------------------------------------------------

f = open("24.txt")
s = f.readline()
k = 0
m = 0
l = 0

for r in range(len(s)):
    if s[r] == "A": k += 1
    while k>1:
        if s[l] == "A": k -= 1
        l += 1
    m = max(m, r-l+1)
print(m)

-----------------------------------------------------------------------

f = open("файл")
s = f.readline()
l = 0
m = 0
kx = ky = 0

for r in range(len(s)):
    if s[r] == "X": kx += 1
    if s[r] == "Y": ky += 1
    while kx>1 or ky>1:
        if s[l] == "X": kx -= 1
        if s[l] == "Y": ky -= 1
        l += 1
    if kx==1 and ky==1: m = max(m, r-l+1)
print(m)

-----------------------------------------------------------------------

f = open("файл")
s = f.readline()
l = 0
m = 0

for r in range(len(s)):
    if s[r] == "A" or s[r] == "D":
        if s[l] == "A" and s[r] == "D" or s[l] == "D" and s[r] == "A":
            m = max(m, r-l+1)
        l = r
print(m)
