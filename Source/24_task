f = open("файл")
s = f.readline()
cnt = 1
max_cnt = 1
for i in range(len(s) - 1):
    if s[i] != s[i + 1]:
        cnt += 1
    else:
        cnt = 1
    max_cnt = max(cnt, max_cnt)
print(max_cnt)

