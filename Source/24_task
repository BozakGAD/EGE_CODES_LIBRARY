f = open("файл")
s = f.readline()
a = s.split("XZZY")
print(len(max(a, key=len)) + 6)

-----------------------------------------------------------------------

print(a.index(max(a, key=len)))
print(len(a))

ЛИБО ЗАМЕНОЙ:
f = open("файл")
s = f.readline()
s = s.replace("XZZY", "XZZ ZZY")
a = s.split("XZZY")
print(len(max(a, key=len)))

